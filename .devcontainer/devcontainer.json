// For format details, see https://aka.ms/devcontainer.json.
// For config options, see the README at:
// https://github.com/rocker-org/devcontainer-templates/tree/main/src/r-ver
{
	"name": "R (rocker/r-ver base)",
	"image": "ghcr.io/rocker-org/devcontainer/r-ver:4.2",

	// features:
	// - install quarto and node (for sverto)
	// - install renv and set up the cache
	// - (to install r packages manually, use r-packages:
	//    https://github.com/rocker-org/devcontainer-features/tree/main/src/r-packages

	"features": {
		"ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
			"version": "prerelease"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"nodeGypDependencies": true,
			"version": "lts"
		},
		"ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
			"packages": "libudunits2-dev,libgdal-dev,libgeos-dev,libproj-dev,libxtst6,libxt6"
		},
		"ghcr.io/rocker-org/devcontainer-features/r-packages:1": {
			"packages": "github::rstudio/renv,tidyverse,here,httpgd,sf,readabs"
		},
	},

	// Use 'forwardPorts' to make a list of ports inside the container available
	// locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead.
	// More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
